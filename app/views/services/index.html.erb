<style type="text/css">
  
  .hrline {
    height: 4px;
    background-color: #D0021B;
    border: none;
  }

 .live__scroll--box {
  background-color: #ffffff;
  border-radius: 20px;
  padding: 15px;
  margin-right: 20px;
  margin-bottom: 20px
}

.btnrentvehicle {
  background-color: #D0021B;
  font-weight: 600;
  color: #ffffff;
  border-radius: 10px;
}

.btnrentvehicle:hover {
  background-color: #D0021B;
  font-weight: 600;
  color: #ffffff;
  border-radius: 10px;
}

.btnrentvehicle:hover {
  background-color: #D0021B;
  font-weight: 600;
  color: #ffffff;
  border-radius: 10px;
}

</style>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4>Services</h4>
      <hr class="hrline" width="15%;" align="left"/>
    </div>
  </div>
  
  <div class="row no-gutters">

      <% @services.each do |service| %>
        <div class="col-lg-3 col-6">
          <div class="live__scroll--box">
          <div class="row">
            <div class="col-lg-12">
              <img src="<%= service.serviceimage %>" class="img-fluid" style="height: 170px;">
            </div>
            <div class="col-lg-12">
              <h5 style="color: #4A4A4A; font-size: 19px; font-weight: 500; margin-top: 10px;">
                <%= service.name %></h5>
              <p style="color: #9B9B9B; font-weight: 600; font-size: 14px; margin-bottom: 5px;">
                <%= service.passendgerno %> Seater</p>
              <p style="font-weight: 600; color: #D0021B; font-size: 20px; margin-bottom: 10px;">
                GHC <%= service.price %> <span style="font-size: 12px; font-weight: 400; color: #6B6B6B;">/ day</span></p>
              <div class="row">
                <div class="col-lg-12">
                  <p>
                    <img src="https://nikasemo-static.s3-us-west-2.amazonaws.com/dianimton-assets/web+assets/premiumbadge.png" width="18px">
                    <span style="font-size: 12px; font-weight: 500; color: #6B6B6B;">PREMIUM</span>
                  </p>
                </div>
                <div class="col-lg-12">
                  <p style="text-align: right;">
                    <a href="/services/<%= service.id  %>" class="btn btnrentvehicle">Rent Vehicle</a>
                  </p>
                </div>

              </div>
            </div>
          </div>
        </div>
        </div>
      <% end %>


   </div>


</div>