<style type="text/css">
	.holddashboardhead {
		background-color: #eaeaea;
		padding-top: 50px;
		padding-bottom: 50px;
		padding-left: 20px;
		padding-right: 20px;
		border-radius: 30px;
	}
</style>

<br>

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="holddashboardhead">
				<h1 style="text-align: center;">Welcome</h1>
				<p style="text-align: center;">Welcome to the admin dashboard. Manage Di Anim Ton. from here.</p>
			</div>
		</div>
	</div>
	<div class="row" style="margin-top: 20px;">
		<div class="col-lg-12">
			<p style="text-align: center;">
				<a href="/products/new" class="btn btn-primary">Create New Product</a>
				<a href="/services/new" class="btn btn-primary">Create New Service</a>
				<a href="/shops/new" class="btn btn-primary">Create New Shop</a>
			</p>
		</div>
		<!-- <div class="col-lg-6">
			
		</div> -->
	</div>
	<div class="row" style="margin-top: 20px; margin-bottom: 40px;">
		<div class="col-lg-4">
			<h5>Products</h5>
			<div class="row">
				<% Product.last(5).each do |product| %>
				<div class="col-lg-12">
					<p style="border-bottom: 1px solid #aeaeae; padding-bottom: 10px;">
						<%= product.name %><br>
						<%= product.description %><br>
						
						<a href="/products/<%= product.id %>" style="color: blue;">Product details</a>
					</p>

				</div>
				<% end %>
			</div>
		</div>

		<div class="col-lg-4">
			<h5>Rental Services</h5>
			<div class="row">
			<% Service.last(5).each do |service| %>

				<div class="col-lg-12">
				<p style="border-bottom: 1px solid #aeaeae; padding-bottom: 10px;">
				<%= service.name %>
				<br>
				<a href="/services/<%= service.id %>" style="color: blue;">Rental detail</a>
				</p>
				</div>

			<% end %>
			</div>
		</div>

		<div class="col-lg-4">
			<h5>Shops</h5>
			<div class="row">
			<% Shop.last(5).each do |shop| %>
					<div class="col-lg-12">
					<p style="border-bottom: 1px solid #aeaeae; padding-bottom: 10px;">
					<%= shop.name %><br>
					<a href="/genservices/<%= shop.id %>" style="color: blue;">Shop detail</a>
					</p>
					</div>

				<% end %>
		</div>
	</div>

</div>

<div class="row">
	<div class="col-lg-4">
		<h5>Product orders</h5>
			<div class="row">
			<% Productorder.last(5).each do |productorder| %>

				<div class="col-lg-12">
				<p style="border-bottom: 1px solid #aeaeae; padding-bottom: 10px;">
				<% if productorder.product %>
				<%= productorder.product.name %>
				<% end %>
				<% if productorder.product %>
				<img src="<%= productorder.product.productimage %>" class="img-fluid">
				<% end %>
				<br>
				<a href="/productorders/<%= productorder.id %>" style="color: blue;">Order detail</a>
				</p>
				</div>

			<% end %>
			</div>
	</div>
	<div class="col-lg-4">
		<h5>Service orders</h5>
			<div class="row">
			<% Serviceorder.last(5).each do |serviceorder| %>

				<div class="col-lg-12">
				<p style="border-bottom: 1px solid #aeaeae; padding-bottom: 10px;">
				<% if serviceorder.service %>
				<%= serviceorder.service.name %>
				<% end %>
				<br>
				<a href="/serviceorders/<%= serviceorder.id %>" style="color: blue;">Order detail</a>
				</p>
				</div>

			<% end %>
			</div>
	</div>
	<div class="col-lg-4">
			<h5>General Services</h5>
			<div class="row">
			<% Genservice.last(5).each do |genservice| %>
					<div class="col-lg-12">
					<p style="border-bottom: 1px solid #aeaeae; padding-bottom: 10px;">
					<%= genservice.name %><br>
					<a href="/genservices/<%= genservice.id %>" style="color: blue;">General service detail</a>
					</p>
					</div>

				<% end %>
		</div>
	</div>
</div>
</div>








