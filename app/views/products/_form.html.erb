<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :productimage %>
    <%= f.text_field :productimage %>
  </div>

  <div class="form-group">
    <label>Select Category:</label><br>
   <%= f.collection_select :category_ids, Category.all, :id, :name, {prompt: "Select Category"}, 
    {class: "select", style: "50%"} %>
  </div>

  <div class="field">
    <%= f.label :shop_id %>
    <%= f.number_field :shop_id, :value => "#{params[:shop_id]}" %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
     <%= f.number_field :user_id, :value => "#{current_user.id}" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
