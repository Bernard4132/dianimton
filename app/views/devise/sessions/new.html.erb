<style type="text/css">
  
body {
  background-color: #ffffff;
}

.holdcontain {
  -webkit-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.11);
  -moz-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.11);
  box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.11);
  background-color: #ffffff;
}

.btnrentvehicle {
  background-color: #D0021B;
  font-weight: 600;
  color: #ffffff;
  border-radius: 0px;
  }

  .btnrentvehicle:hover {
    background-color: #D0021B;
    font-weight: 600;
    color: #ffffff;
    border-radius: 30px;
  }

  .btnrentvehicle:hover {
    background-color: #D0021B;
    font-weight: 600;
    color: #ffffff;
    border-radius: 30px;
  }

  .contigoogle {
    -webkit-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.21);
    -moz-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.21);
    box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.21);
    background-color: #ffffff;
    font-weight: 600;
    color: #D0021B;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 300;
    width: 100%;
  }

</style>

<div class="container holdcontain" style="background-color: #ffffff; padding: 30px; border-radius: 20px; margin-top: 40px; margin-bottom: 40px;">
  <div class="row" style="">
    <div class="col-lg-6">
      <h2 style="color: #D0021B;">Login</h2>
      <p>Welcome Back!</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "Log in", :class => "btn btnrentvehicle" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="col-lg-6">
      <img class="img-fluid" src="https://nikasemo-static.s3-us-west-2.amazonaws.com/dianimton-assets/web+assets/signinimage.jpg">
      <p style="text-align: center; margin-top: 15px;">Or</p>
      <p style="text-align: center;"><a href="" class="btn btn-lg contigoogle"><i class="fa fa-google" aria-hidden="true"></i> Continue with Google</a></p>
    </div>
  </div>
</div>



